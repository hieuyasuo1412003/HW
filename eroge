player = {
    "Name":"Hayama Akisa",
    "Age":16,
}
while True:
    print("Viết 'stats' để xem chỉ số bản thân hoặc viết 'play' để chơi")
    option = input("Lựa chọn của bạn:")
    if option == "stats":
        print("Name :", player["Name"])
        print("Age:", player["Age"])
    elif option == "play":
        print("Bạn mở mắt thức giấc bằng một giọng nói ngot ngào")
        print("Dậy nào Akisa-kun, không thì cậu sẽ muộn học đó")
        print("Giọng nói đó là của Mashiro Midori")
        MashiroMidori = {
            "Name":"Mashiro Midori",
            "Age":16,
            "Relationship":"Bạn thuở nhỏ",
            "Affection":90
        }
        print("Name:", MashiroMidori["Name"])
        print("Age:", MashiroMidori["Age"])
        print("Mối quan hệ:", MashiroMidori["Relationship"])
        print("Tình cảm:", MashiroMidori["Affection"])
        print("Hôm nay mẹ cậu nhờ mình nấu bữa sáng cho cậu đấy")
        print("Cậu dậy đi rồi xuống ăn")
        print("Ukm, Mình dậy ngay đây")
        print("Một lúc sau...")
        print("Bạn đang đứng trước bàn ăn với những món ăn do Midori nấu")
        print("Bạn sẽ nói")
        option = input("Lựa chọn của bạn")
        print ("1.Nhìn ngon đấy Midori-chan")
        print ("2.Trông món ăn thật là ghê tởm")
        if option == "1":
            MashiroMidori["Affection"] = 92
            print ("Độ tình cảm của Midori dành cho bạn tăng 2 điểm")
            print ("Tình cảm:", MashiroMidori["Affection"])
            print ("Ukm, cảm ơn cậu Akisa-kun")
        elif option == "2":
            MashiroMidori["Affection"] = 0
            print ("Độ tình cảm của Midori dành cho bạn đã giảm về 0")
            print ("Tình cảm:", MashiroMidori["Affection"])
            print ("Game over vì bạn đã làm người con gái nấu ăn cho bạn khóc")

        print("Sau khi ăn sáng xong, Midori hỏi bạn")
        print("Chúng mình đến trường cùng nhau nhé")
        print("Câu trả lời của bạn")
        option = input("Lựa chọn của bạn:")
        print("1. Không")
        print("2.Ukm, chúng mình cùng đi đến trường nào")
        if option == "1":
            MashiroMidori["Affection"] = 91
            print ("Tình cảm:", MashiroMidori["Affection"])
        elif option == "2":
            MashiroMidori["Affection"] = 93
            print ("Tình cảm:", MashiroMidori["Affection"])
            print("Vậy thì chúng ta cùng đi thôi, Akisa-kun")

        print("Sau khi đến trường...")
        print("Bạn tạm biệt Midori để tới lớp học của mình")
        print("Vậy chào cậu nhé, mình vào lớp đây")
        print("Hẹn gặp lại cậu sau")
        print("Ukm, chào cậu")
        print("Vừa bước tới trước của lớp bạn bắt gặp một cô gái")
        print("Cô ấy có mái tóc màu vàng vô cùng bồng bềnh,")
        print("Làn da trắng tuyệt đẹp và thân hình cân đối")
        print("Cô ấy tên là Misaki Arisa")
        MisakiArisa = {
            "Name":"Misaki Arisa",
            "Age":16,
            "Relationship":"Bạn học cùng lớp kiêm Idol của trường",
            "Affection":87
        }
        print("Name:", MisakiArisa["Name"])
        print("Age:", MisakiArisa["Age"])
        print("Mối quan hệ:", MisakiArisa["Relationship"])
        print("Tình cảm:", MisakiArisa["Affection"])
        print("Chào buổi sáng Misaki-san")
        print("Ukm, chào buổi sáng Hayama-kun")
        print("Hôm nay cậu khỏe không ?")
        print("À , ừ mình khỏe")
        print("Vậy cậu tránh ra cho mình vào chỗ ngồi được không")
        print("À, ừ")
        print("Arisa trông có vẻ gì đó mắc cỡ")
        print("Sau đó cô ấy nói một cách vô cùng ngượng nghịu")
        print("Cuối...cuối tuần này cậu có thể hẹn hò với mình được không ?")
        print("Đột nhiên cả lũ con trai hét lên với vẻ tiếc nuối ")
        print("Và sau đó bạn cảm nhận được một luồng sat khí vô cùng lớn đang hướng về mình")
        print("Mình muốn cảm ơn cậu vì chuyện tuần trước")

        print("Hồi tưởng...")
        print("Bạn đang đi trên đường và thấy Arisa đang bị quấy rối bởi mấy đàn anh lớp trên")
        print("Hình như đó là Misaki-san thì phải ?")
        print("Có phải cô ấy đang bị làm phiền không ?")
        print("Mình phải giúp cô ấy mới được")
        print("Các anh nên dừng lại đi")
        print("Mày là ai vậy ?")
        print("Không muốn bị ăn đấm thì đi chỗ khác đi")
        print("Các anh đang làm phiền cô ấy đấy")
        print("Anh em, tẩn nó")
        print("Sau khi cho team kia cho bạn ăn hành và bỏ đi...")
        print("Cậu có sao không Hayama-kun")
        print("Ukm, mình không sao")
        print("Vậy còn cậu, Misaki-san, cậu có sao không")
        print("Mình không sao, nhờ có cậu mà mấy tên kia không làm gì mình cả")
        print("Vậy à, thật tốt quá, giờ mình phải đi rồi, tạm biệt cậu")
        print("À, ừ tạm biệt cậu")

        print("Hiện tại...")
        print("Câu trả lời của bạn")
        option = input("Lựa chọn của bạn:")
        print("1.Ừ nhất định mình sẽ đi(Gây thù oán với toàn bộ con trai trong trường)")
        print("2.Cuối tuần này mình có việc bận rồi(Làm tổn thương Arisa)")
        if option == "1":
            MisakiArisa["Affection"] = 89
            print ("Tình cảm:", MisakiArisa["Affection"])
            print("Cảm ơn cậu, cậu nhất định phải đi đó Akisa-kun")
            print("Ukm, nhất định mình sẽ đi")
        elif option == "2":
            MisakiArisa["Affection"] = 0
            print ("Tình cảm:", MisakiArisa["Affection"])
            print("Ừ, vậy thì thôi vậy")
            print("Game over vì bạn vừa bỏ lỏ cơ hội hẹn hò vói Idol của trường")

        print("khi tan trường...")
        print("Bạn gặp Midori tại cổng trường")
        print("Chùng mình về cùng nhau nhé Akisa-kun")
        print("Ừ")
        print("Đang trên dường về nhà, bỗng nhiên Midori có hỏi")
        print("Tớ nghe đồn rằng cuối tuần này cậu sẽ đi hẹn hò với Misaki-san phải không ?")
        print("Câu trả lời của bạn")
        option = input("Lựa chọn của bạn:")
        print("1.Ừ dúng đó(Gây tổn thương nghiêm trọng cho Midori)")
        print("2.Tin đồn thất thiệt ấy mà(Tình bạn từ thuở nhỏ được bảo toàn)")
        if option == "1":
            MashiroMidori["Affection"] = 0
            print ("Độ tình cảm của Midori dành cho bạn đã giảm về 0")
            print("Tớ ghét cậu")
            print("Akisa-kun no Baka!!!")
            print("Game over")
            print("Tự biết lí do :v")
        elif option == "2":
            MashiroMidori["Affection"] = 94
            print ("Tình cảm:", MashiroMidori["Affection"])
            print("Thì ra là vậy")
            print("Mà Akisa-kun này")
            print("Đột nhiên mặt Midori đỏ lên")
            print("Cô nói với một âm lượng cực nhỏ")
            print("Vậy cậu có muốn hẹn hò với mình không ?")
            print("Cậu nói gì vậy Midori-chan")
            print("À, không có gì đâu")
            print("Chung ta về nhanh thôi")
            print("Ukm")

        print("Hết phần 1 vì creator quá lười và đang có 2 bài kiểm tra đang chờ đợi ở phía trước ")
        print("Buổi hẹn hò với Misaki Arisa sẽ diễn ra ở phần 2 ")
